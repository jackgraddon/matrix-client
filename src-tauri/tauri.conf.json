{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "matrix-client",
  "version": "0.1.0",
  "identifier": "cc.jackg.matrixclient",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "corepack yarn dev",
    "beforeBuildCommand": "corepack yarn generate"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Ruby Chat",
        "useHttpsScheme": true,
        "width": 1200,
        "minWidth": 1000,
        "height": 800,
        "minHeight": 500,
        "resizable": true,
        "decorations": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}